{
  "name": "luxucare-cms",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npx ts-node scripts/check-no-mock.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "typecheck:test": "tsc --noEmit -p tsconfig.test.json",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:smoke": "jest --config jest.smoke.config.js",
    "test:health": "jest --config jest.health.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:single-org": "jest src/tests/single-org-mode.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:setup": "playwright install",
    "test:production": "node scripts/production-test.js",
    "test:auth": "node scripts/auth-test.js",
    "diag:ui": "node -e \"fetch((process.env.APP_URL || 'http://localhost:3000') + '/api/diag/ui').then(r=>r.json()).then(j=>console.log(JSON.stringify(j,null,2))).catch(e=>{console.error(e);process.exit(1);})\"",
    "uat:env-check": "node scripts/uat/verify-env.mjs",
    "uat:dns-check": "node scripts/uat/verify-dns.mjs",
    "uat:endpoint-check": "node scripts/uat/verify-endpoints.mjs",
    "uat:preflight": "npm run uat:env-check && npm run uat:dns-check && npm run uat:endpoint-check",
    "uat:critical": "echo '🚨 クリティカルテスト実行' && echo '詳細: docs/uat/checklists/critical.md 参照'",
    "uat:important": "echo '🟡 重要テスト実行' && echo '詳細: docs/uat/checklists/important.md 参照'",
    "uat:recommended": "echo '🟢 推奨テスト実行' && echo '詳細: docs/uat/checklists/recommended.md 参照'",
    "uat:report": "node scripts/uat/generate-report.mjs",
    "uat:full": "npm run uat:preflight && echo '✅ 事前チェック完了。次のステップ: npm run uat:critical'",
    "verify:env": "node scripts/ops/verify-env.mjs",
    "verify:supabase": "node scripts/ops/verify-supabase.mjs",
    "verify:prod-ready": "echo '🔍 本番稼働準備確認を開始...' && npm run verify:env && npm run verify:supabase && echo '🎉 全ての検証が完了しました。本番デプロイ準備完了です。'",
    "health:check": "node scripts/ops/health-check.mjs",
    "health:detailed": "node scripts/ops/health-check.mjs --detailed",
    "health:production": "node scripts/ops/health-check.mjs --url=https://aiohub.jp",
    "prod:build": "NODE_ENV=production npm run build",
    "prod:start": "NODE_ENV=production npm run start",
    "prod:test": "NODE_ENV=production npm run test:e2e",
    "prod:validate": "npm run typecheck && npm run lint && npm run test:unit",
    "predeploy:staging": "node scripts/verify-env.mjs || echo 'Environment check failed, but continuing with staging deploy'",
    "deploy:staging": "vercel --target preview",
    "predeploy:production": "node scripts/verify-env.mjs",
    "deploy:production": "vercel --prod",
    "deploy:force-prod": "vercel --prod --force",
    "postdeploy": "npm run health:production && npm run test:production",
    "verify:local": "./scripts/verify-deployment.sh development localhost:3001 || true",
    "verify:prod": "./scripts/verify-deployment.sh production aiohub.jp || true",
    "verify:report": "node ./scripts/verify-report.mjs",
    "validate:production": "node scripts/prod-validation.mjs",
    "validate:env": "node scripts/verify-env.mjs",
    "audit:rls": "node ./scripts/audit-rls.mjs",
    "smoke:api": "node ./scripts/smoke-api.mjs",
    "verify:all": "bash ./scripts/verify-all.sh",
    "check:no-mock": "ts-node scripts/check-no-mock.ts",
    "validate:feeds": "npm run validate:rss && npm run validate:sitemap",
    "validate:rss": "curl -s http://localhost:3001/feed.xml | xmllint --format - > /dev/null && echo '✅ RSS feed valid'",
    "validate:sitemap": "curl -s http://localhost:3001/sitemap-images.xml | xmllint --format - > /dev/null && echo '✅ Image sitemap valid'",
    "aio:test": "npm run check:no-mock && npm run validate:feeds && echo '✅ AIO requirements passed'",
    "aio:report": "ts-node scripts/aio-compliance-report.ts",
    "aio:monthly": "npm run aio:report && echo '📅 月次AIO適合率チェック完了'",
    "audit:ux": "echo '🔍 AIOHub UX/UI監査開始...' && mkdir -p reports/responsive-audit/screenshots && playwright test --config=playwright.ux-audit.config.ts && npx ts-node scripts/generate-ux-audit-summary.ts && echo '✅ 監査完了: reports/responsive-audit/summary.md を確認'",
    "audit:ux:dev": "echo '🧪 UX監査テスト (ローカル)' && PLAYWRIGHT_BASE_URL=http://localhost:3000 playwright test --config=playwright.ux-audit.config.ts --headed",
    "audit:ux:report": "npx ts-node scripts/generate-ux-audit-summary.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@modelcontextprotocol/server-postgres": "^0.6.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/nextjs": "^10.12.0",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@types/sharp": "^0.31.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "dompurify": "^3.2.7",
    "isomorphic-dompurify": "^2.28.0",
    "jose": "^5.1.0",
    "jsdom": "^27.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "0.544.0",
    "marked": "^16.3.0",
    "next": "^15.0.0",
    "nodemailer": "^7.0.6",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "resend": "^4.0.0",
    "server-only": "^0.0.1",
    "sharp": "^0.34.4",
    "stripe": "^14.25.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "web-vitals": "^5.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@jest/globals": "^29.7.0",
    "@next/bundle-analyzer": "^15.5.3",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/dompurify": "^3.0.5",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/marked": "^5.0.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "axe-core": "^4.11.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "cross-fetch": "^4.0.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "glob": "^11.0.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.2.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prettier": "^3.1.0",
    "size-limit": "^11.0.0",
    "supabase": "^2.45.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "wait-on": "^7.2.0"
  }
}
