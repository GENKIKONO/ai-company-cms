/**
 * ãƒ¬ãƒãƒ¼ãƒˆã‚’Supabase Storageã«ä¿å­˜
 */
export async function saveReportToStorage(
  reportId: string,
  htmlContent: string,
  organizationId: string
): Promise<string | null> {
  try {
    const supabaseUrl = process.env.NEXT_PUBLIC_SUPABASE_URL!;
    const supabaseServiceKey = process.env.SUPABASE_SERVICE_ROLE_KEY!;
    const supabase = createClient(supabaseUrl, supabaseServiceKey);
    
    const filename = `monthly-reports/${organizationId}/${reportId}.html`;
    
    const { data, error } = await supabase.storage
      .from('reports')
      .upload(filename, htmlContent, {
        contentType: 'text/html',
        upsert: true
      });

    if (error) {
      logger.error('Failed to save report to storage', { data: error });
      return null;
    }

    const { data: urlData } = supabase.storage
      .from('reports')
      .getPublicUrl(filename);

    return urlData.publicUrl;

  } catch (error) {
    logger.error('Error saving report to storage', { data: error instanceof Error ? error : new Error(String(error)) });
    return null;
  }
}