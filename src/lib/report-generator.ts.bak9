/**
 * æœˆæ¬¡ãƒ¬ãƒãƒ¼ãƒˆãƒ‡ãƒ¼ã‚¿ã‚’åé›†
 */
export async function collectMonthlyData(
  organizationId: string,
  year: number,
  month: number
): Promise<ReportData | null> {
  try {
    const supabaseUrl = process.env.NEXT_PUBLIC_SUPABASE_URL!;
    const supabaseServiceKey = process.env.SUPABASE_SERVICE_ROLE_KEY!;
    const supabase = createClient(supabaseUrl, supabaseServiceKey);

    // çµ„ç¹”æƒ…å ±å–å¾—
    const { data: org, error: orgError } = await supabase
      .from('organizations')
      .select('id, name, plan')
      .eq('id', organizationId)
      .single();

    if (orgError || !org) {
      logger.error('Organization not found for report generation', { data: { organizationId, orgError } });
      return null;
    }

    // æœŸé–“è¨­å®š
    const startDate = new Date(year, month - 1, 1);
    const endDate = new Date(year, month, 0, 23, 59, 59);
    const startDateStr = startDate.toISOString();
    const endDateStr = endDate.toISOString();

    logger.info('Collecting monthly report data', {
      organizationId,
      period: `${year}-${month}`,
      startDate: startDateStr,
      endDate: endDateStr
    });

    // AI Visibility ãƒ‡ãƒ¼ã‚¿åé›†
    const { data: aiScores } = await supabase
      .from('ai_visibility_scores')
      .select(`
        *,
        ai_content_units (
          title,
          content_type
        )
      `)
      .eq('org_id', organizationId)
      .gte('calculated_at', startDateStr)
      .lte('calculated_at', endDateStr)
      .order('calculated_at', { ascending: false });

    // AI Bot ãƒ­ã‚°åé›†
    const { data: botLogs } = await supabase
      .from('ai_bot_logs')
      .select('bot_name, accessed_at')
      .eq('org_id', organizationId)
      .gte('accessed_at', startDateStr)
      .lte('accessed_at', endDateStr);

    // ãƒ‡ãƒ¼ã‚¿å‡¦ç†
    const aiVisibilityData = processAIVisibilityData(aiScores || []);
    const botLogsData = processBotLogsData(botLogs || []);

    return {
      organization: {
        id: org.id,
        name: org.name,
        plan: (org.plan as PlanType) || 'starter'
      },
      period: {
        year,
        month,
        startDate: startDateStr,
        endDate: endDateStr
      },
      aiVisibilityData,
      botLogsData
    };

  } catch (error) {
    logger.error('Failed to collect monthly data', { data: error instanceof Error ? error : new Error(String(error)) });
    return null;
  }
}

/**
 * AI Visibility ãƒ‡ãƒ¼ã‚¿ã‚’å‡¦ç†
 */
function processAIVisibilityData(aiScores: any[]) {
  // URLåˆ¥ã®æœ€æ–°ã‚¹ã‚³ã‚¢ã‚’å–å¾—
  const latestByUrl = aiScores.reduce((acc, score) => {
    if (!acc[score.url] || new Date(score.calculated_at) > new Date(acc[score.url].calculated_at)) {
      acc[score.url] = score;
    }
    return acc;
  }, {} as Record<string, any>);

  const latestScores = Object.values(latestByUrl);

  // çµ±è¨ˆè¨ˆç®—
  const totalUrls = latestScores.length;
  const averageScore = totalUrls > 0 
    ? Math.round((latestScores as any[]).reduce((sum: number, score: any) => sum + (Number(score.total_visibility_score) || 0), 0) / totalUrls)
    : 0;
  const topPerformingUrls = latestScores.filter((score: any) => (Number(score.total_visibility_score) || 0) >= 80).length;
  const improvementNeededUrls = latestScores.filter((score: any) => (Number(score.total_visibility_score) || 0) <= 50).length;

  const contentScores = latestScores
    .map((score: any) => ({
      url: score.url,
      title: score.ai_content_units?.title || null,
      total_score: Number(score.total_visibility_score || 0),
      component_scores: {
        structured_data: Number(score.structured_data_score || 0),
        ai_access: Number(score.ai_access_score || 0),
        seo_performance: Number(score.seo_performance_score || 0)
      },
      ai_metrics: {
        bot_hits: Number(score.ai_bot_hits_count || 0),
        unique_bots: Number(score.unique_bots_count || 0)
      }
    }))
    .sort((a, b) => b.total_score - a.total_score);

  return {
    overall_score: averageScore,
    content_scores: contentScores,
    summary: {
      total_analyzed_urls: totalUrls,
      average_score: averageScore,
      top_performing_urls: topPerformingUrls,
      improvement_needed_urls: improvementNeededUrls
    }
  };
}

/**
 * Bot ãƒ­ã‚°ãƒ‡ãƒ¼ã‚¿ã‚’å‡¦ç†
 */
function processBotLogsData(botLogs: any[]) {
  const botCounts = botLogs.reduce((acc, log) => {
    acc[log.bot_name] = (acc[log.bot_name] || 0) + 1;
    return acc;
  }, {} as Record<string, number>);

  const topBots = Object.entries(botCounts)
    .map(([bot_name, hits]) => ({ bot_name, hits: Number(hits) }))
    .sort((a, b) => b.hits - a.hits)
    .slice(0, 5);

  return {
    total_count: botLogs.length,
    unique_bots: Object.keys(botCounts).length,
    top_bots: topBots
  };
}

