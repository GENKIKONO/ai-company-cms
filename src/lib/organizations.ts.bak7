    if (!response.ok) {
      const errorData = await response.json().catch(() => ({}));
      throw new Error(errorData.message || `HTTP ${response.status}`);
    }

    const result = await response.json();
    
    // âœ… FIXED: Trigger cache refresh without full page reload
    // The server-side revalidateTag() should handle cache invalidation,
    // but we add a small delay to ensure it completes before any navigation
    if (typeof window !== 'undefined') {
      // Optional: Signal that data should be refetched on next navigation
      logger.debug('âœ… Organization updated, server cache invalidated');
    }
    
    return { data: result.data, error: null };
  } catch (error) {
    logger.error('Error updating organization', { data: error instanceof Error ? error : new Error(String(error)) });
    return { data: null, error };
  }
}

