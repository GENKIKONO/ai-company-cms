// ä¼æ¥­ä¸€è¦§å–å¾—
export async function getOrganizations(options: {
  search?: string;
  status?: string;
  industries?: string[];
  limit?: number;
  offset?: number;
} = {}) {
  try {
    let query = supabaseBrowser
      .from('organizations')
      .select(`
        *,
        services(count),
        case_studies(count),
        faqs(count)
      `);
    
    // ãƒ—ãƒ©ãƒ³é‡ã¿ä»˜ã‘ã‚½ãƒ¼ãƒˆã§ã¯ãªãã€ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆã®æ›´æ–°æ—¥ã‚½ãƒ¼ãƒˆã‚’ä½¿ç”¨
    // ãƒ—ãƒ©ãƒ³é‡ã¿ä»˜ã‘ã¯åˆ¥é€”ãƒ•ãƒ­ãƒ³ãƒˆå´ã§å®Ÿè£…
    query = query.order('updated_at', { ascending: false });

    // æ¤œç´¢æ¡ä»¶ã®é©ç”¨
    if (options.search) {
      query = query.or(`name.ilike.%${options.search}%,description.ilike.%${options.search}%`);
    }

    if (options.status) {
      query = query.eq('status', options.status);
    } else {
      // ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆã§ã¯å…¬é–‹æ¸ˆã¿ä¼æ¥­ã®ã¿å–å¾—ï¼ˆFreeãƒ—ãƒ©ãƒ³ã‚‚å«ã‚€ï¼‰
      query = query.eq('is_published', true);
    }

    if (options.industries && options.industries.length > 0) {
      query = query.overlaps('industries', options.industries);
    }

    if (options.limit) {
      query = query.limit(options.limit);
    }

    if (options.offset) {
      query = query.range(options.offset, options.offset + (options.limit || 10) - 1);
    }

    const { data, error } = await query;

    if (error) throw error;
    return { data, error: null };
  } catch (error) {
    logger.error('Error fetching organizations', { data: error instanceof Error ? error : new Error(String(error)) });
    return { data: null, error };
  }
}

// ä¼æ¥­è©³ç´°å–å¾—
export async function getOrganization(id: string) {
  try {
    // ğŸ”¥ FIX: Ensure authenticated user access for consistent RLS behavior
    const { data: { user } } = await supabaseBrowser.auth.getUser();
    if (!user) {
      throw new Error('Not authenticated');
    }

    // ğŸ”¥ FIX: Use direct organizations table to ensure fresh data after saves
    // Instead of organizations_with_owner view which may have stale data
    const { data, error } = await supabaseBrowser
      .from('organizations')
      .select(`
        *,
        services(*),
        case_studies(*),
        faqs(*)
      `)
      .eq('id', id)
      .eq('created_by', user.id)  // ğŸ”¥ Explicit user filter for RLS consistency
      .single();

    if (error) throw error;
    return { data, error: null };
  } catch (error) {
    logger.error('Error fetching organization', { data: error instanceof Error ? error : new Error(String(error)) });
    return { data: null, error };
  }
}

// ä¼æ¥­ä½œæˆ
export async function createOrganization(organizationData: OrganizationFormData) {
  try {
    const { data: { user } } = await supabaseBrowser.auth.getUser();
    
    if (!user) {
      throw new Error('Not authenticated');
    }

    const { data, error } = await supabaseBrowser
      .from('organizations')
      .insert({
        ...organizationData,
        created_by: user.id,
        status: 'draft'
      })
      .select()
      .single();

    if (error) throw error;
    return { data, error: null };
  } catch (error) {
    logger.error('Error creating organization', { data: error instanceof Error ? error : new Error(String(error)) });
    return { data: null, error };
  }
}

