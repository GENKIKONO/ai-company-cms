import { logger } from '@/lib/utils/logger';

/**
 * Memory Cache System
 * é«˜é€Ÿãªãƒ¡ãƒ¢ãƒªãƒ™ãƒ¼ã‚¹ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‚·ã‚¹ãƒ†ãƒ 
 */

interface CacheEntry<T> {
  data: T;
  timestamp: number;
  ttl: number;
  hits: number;
}

interface CacheStats {
  hits: number;
  misses: number;
  size: number;
  hitRate: number;
  totalRequests: number;
}

class MemoryCache {
  private cache = new Map<string, CacheEntry<any>>();
  private stats = { hits: 0, misses: 0 };
  private maxSize: number;
  private defaultTTL: number;
  private cleanupInterval: NodeJS.Timeout | null = null;

  constructor(maxSize = 1000, defaultTTL = 5 * 60 * 1000) { // 5åˆ†ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆ
    this.maxSize = maxSize;
    this.defaultTTL = defaultTTL;
    
    // å®šæœŸçš„ãªã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ï¼ˆ30ç§’ã”ã¨ï¼‰
    this.cleanupInterval = setInterval(() => this.cleanup(), 30000);
  }

  /**
   * ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‹ã‚‰å€¤ã‚’å–å¾—
   */
  get<T>(key: string): T | null {
    const entry = this.cache.get(key);
    
    if (!entry) {
      this.stats.misses++;
      return null;
    }

    // TTL ãƒã‚§ãƒƒã‚¯
    if (Date.now() - entry.timestamp > entry.ttl) {
      this.cache.delete(key);
      this.stats.misses++;
      return null;
    }

    // ãƒ’ãƒƒãƒˆçµ±è¨ˆæ›´æ–°
    entry.hits++;
    this.stats.hits++;
    
    return entry.data;
  }

  /**
   * ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã«å€¤ã‚’ä¿å­˜
   */
  set<T>(key: string, data: T, ttl?: number): void {
    // ã‚µã‚¤ã‚ºåˆ¶é™ãƒã‚§ãƒƒã‚¯
    if (this.cache.size >= this.maxSize && !this.cache.has(key)) {
      this.evictLRU();
    }

    const entry: CacheEntry<T> = {
      data,
      timestamp: Date.now(),
      ttl: ttl || this.defaultTTL,
      hits: 0
    };

    this.cache.set(key, entry);
  }

  /**
   * é–¢æ•°ã®çµæœã‚’ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã™ã‚‹ãƒ˜ãƒ«ãƒ‘ãƒ¼
   */
  async wrap<T>(
    key: string, 
    fn: () => Promise<T> | T, 
    ttl?: number
  ): Promise<T> {
    const cached = this.get<T>(key);
    if (cached !== null) {
      return cached;
    }

    const result = await fn();
    this.set(key, result, ttl);
    return result;
  }

  /**
   * ç‰¹å®šã®ã‚­ãƒ¼ã‚’å‰Šé™¤
   */
  delete(key: string): boolean {
    return this.cache.delete(key);
  }

  /**
   * ãƒ‘ã‚¿ãƒ¼ãƒ³ãƒãƒƒãƒãƒ³ã‚°ã§å‰Šé™¤
   */
  deletePattern(pattern: string): number {
    const regex = new RegExp(pattern);
    let deleted = 0;
    
    for (const key of this.cache.keys()) {
      if (regex.test(key)) {
        this.cache.delete(key);
        deleted++;
      }
    }
    
    return deleted;
  }

  /**
   * ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‚’ã‚¯ãƒªã‚¢
   */
  clear(): void {
    this.cache.clear();
    this.stats = { hits: 0, misses: 0 };
  }

  /**
   * çµ±è¨ˆæƒ…å ±ã‚’å–å¾—
   */
  getStats(): CacheStats {
    const totalRequests = this.stats.hits + this.stats.misses;
    return {
      hits: this.stats.hits,
      misses: this.stats.misses,
      size: this.cache.size,
      hitRate: totalRequests > 0 ? (this.stats.hits / totalRequests) * 100 : 0,
      totalRequests
    };
  }

  /**
   * æœŸé™åˆ‡ã‚Œã‚¨ãƒ³ãƒˆãƒªã®ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—
   */
  private cleanup(): void {
    const now = Date.now();
    let cleaned = 0;
    
    for (const [key, entry] of this.cache.entries()) {
      if (now - entry.timestamp > entry.ttl) {
        this.cache.delete(key);
        cleaned++;
      }
    }

    if (cleaned > 0) {
      logger.debug(`ğŸ§¹ Cache cleanup: ${cleaned} expired entries removed`);
    }
  }

  /**
   * LRUï¼ˆæœ€ã‚‚ä½¿ç”¨ã•ã‚Œã¦ã„ãªã„ã‚¢ã‚¤ãƒ†ãƒ ï¼‰ã‚’å‰Šé™¤
   */
  private evictLRU(): void {
    let lruKey: string | null = null;
    let minHits = Infinity;
    let oldestTime = Infinity;

    for (const [key, entry] of this.cache.entries()) {
      // ãƒ’ãƒƒãƒˆæ•°ãŒå°‘ãªãã€ã‹ã¤å¤ã„ã‚¨ãƒ³ãƒˆãƒªã‚’å„ªå…ˆå‰Šé™¤
      if (entry.hits < minHits || (entry.hits === minHits && entry.timestamp < oldestTime)) {
        lruKey = key;
        minHits = entry.hits;
        oldestTime = entry.timestamp;
      }
    }

    if (lruKey) {
      this.cache.delete(lruKey);
    }
  }

  /**
   * ãƒªã‚½ãƒ¼ã‚¹ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—
   */
  destroy(): void {
    if (this.cleanupInterval) {
      clearInterval(this.cleanupInterval);
      this.cleanupInterval = null;
    }
    this.clear();
  }
}

// ã‚°ãƒ­ãƒ¼ãƒãƒ«ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹
export const memoryCache = new MemoryCache(2000, 10 * 60 * 1000); // 2000ã‚¨ãƒ³ãƒˆãƒªã€10åˆ†TTL

// ç‰¹å®šç”¨é€”ã®ã‚­ãƒ£ãƒƒã‚·ãƒ¥ãƒ˜ãƒ«ãƒ‘ãƒ¼
export const cacheHelpers = {
  /**
   * çµ„ç¹”ãƒ‡ãƒ¼ã‚¿ã®ã‚­ãƒ£ãƒƒã‚·ãƒ¥
   */
  async organizations<T>(fn: () => Promise<T>, page = 1, limit = 24): Promise<T> {
    const key = `organizations:${page}:${limit}`;
    return memoryCache.wrap(key, fn, 5 * 60 * 1000); // 5åˆ†ã‚­ãƒ£ãƒƒã‚·ãƒ¥
  },

  /**
   * ã‚µãƒ¼ãƒ“ã‚¹ãƒ‡ãƒ¼ã‚¿ã®ã‚­ãƒ£ãƒƒã‚·ãƒ¥
   */
  async services<T>(orgId: string, fn: () => Promise<T>): Promise<T> {
    const key = `services:${orgId}`;
    return memoryCache.wrap(key, fn, 3 * 60 * 1000); // 3åˆ†ã‚­ãƒ£ãƒƒã‚·ãƒ¥
  },

  /**
   * æ¤œç´¢çµæœã®ã‚­ãƒ£ãƒƒã‚·ãƒ¥
   */
  async search<T>(query: string, filters: any, fn: () => Promise<T>): Promise<T> {
    const key = `search:${query}:${JSON.stringify(filters)}`;
    return memoryCache.wrap(key, fn, 2 * 60 * 1000); // 2åˆ†ã‚­ãƒ£ãƒƒã‚·ãƒ¥
  },

  /**
   * JSON-LD ãƒ‡ãƒ¼ã‚¿ã®ã‚­ãƒ£ãƒƒã‚·ãƒ¥
   */
  async jsonLd<T>(entityType: string, entityId: string, fn: () => Promise<T>): Promise<T> {
    const key = `jsonld:${entityType}:${entityId}`;
    return memoryCache.wrap(key, fn, 15 * 60 * 1000); // 15åˆ†ã‚­ãƒ£ãƒƒã‚·ãƒ¥
  },

  /**
   * ã‚­ãƒ£ãƒƒã‚·ãƒ¥ç„¡åŠ¹åŒ–ãƒ˜ãƒ«ãƒ‘ãƒ¼
   */
  invalidate: {
    organization: (orgId: string) => {
      memoryCache.deletePattern(`organizations:`);
      memoryCache.deletePattern(`services:${orgId}`);
      memoryCache.deletePattern(`jsonld:organization:${orgId}`);
    },
    
    service: (orgId: string, serviceId?: string) => {
      memoryCache.deletePattern(`services:${orgId}`);
      if (serviceId) {
        memoryCache.deletePattern(`jsonld:service:${serviceId}`);
      }
    },
    
    search: () => {
      memoryCache.deletePattern(`search:`);
    }
  }
};

export default memoryCache;