{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "warn",
    "no-console": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "scripts/archive/"
  ],
  "overrides": [
    {
      "files": ["src/lib/email/templates/**/*.tsx"],
      "rules": {
        "@next/next/no-head-element": "off"
      }
    },
    {
      "files": ["scripts/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/lib/log.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}