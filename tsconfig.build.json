{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx", 
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "**/__tests__/**/*",
    "src/lib/monitoring/**/*",
    "src/lib/json-ld/validator.ts",
    "src/app/api/ops/**/*"
  ]
}