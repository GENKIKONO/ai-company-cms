# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase MCP (Model Context Protocol) - READ-ONLY ACCESS
# Get this from Supabase Dashboard > Settings > Database > Connection String (Direct connection)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
SUPABASE_DB_URL_RO=postgresql://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT Secret for approval tokens
JWT_SECRET=your_jwt_secret_key_here

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Email Configuration
# Set to 'true' to use Supabase's built-in email sending (default)
# Set to 'false' to use only Resend API for all email sending
USE_SUPABASE_EMAIL=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_FALLBACK=gpt-3.5-turbo

# Stripe (for future use)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Security Configuration
CSRF_SECRET=your_csrf_secret_32_chars_minimum
API_SIGNATURE_SECRET=your_api_signature_secret_32_chars
ADMIN_ALLOWED_IPS=192.168.1.100,10.0.0.5
RESEND_WEBHOOK_SECRET=your_resend_webhook_secret

# Admin API Protection (Phase 4 - Additional Security)
ADMIN_API_SECRET_KEY=your_admin_api_secret_key_64_chars_minimum
ENABLE_ADMIN_AUDIT_DB=true
FORCE_HTTPS=true

# Admin Two-Factor Authentication (TOTP)
# TOTP_SECRET_[user_id]=base32_secret_for_specific_admin_user
# Feature Flags Allowlists (comma-separated org IDs)
FEATURE_ALLOWLIST_MONITORING=org-id-1,org-id-2
FEATURE_ALLOWLIST_BM_BETA=org-id-3,org-id-4
FEATURE_ALLOWLIST_ADVANCED_EMBED=org-id-5,org-id-6

